<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="fill_space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="gray_divide_line_style">
        <item name="android:background">@color/div_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="text_15_style">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tab_btn">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-15dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_pad_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/common_pad_top</item>
        <item name="android:paddingTop">@dimen/common_pad_top</item>
        <item name="android:paddingRight">@dimen/common_pad_right</item>
        <item name="android:paddingLeft">@dimen/common_pad_right</item>
    </style>

    <style name="personal_item_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/personal_item_pad_t</item>
        <item name="android:paddingTop">@dimen/personal_item_pad_t</item>
        <item name="android:paddingRight">@dimen/personal_item_pad_r</item>
        <item name="android:paddingLeft">@dimen/personal_item_pad_r</item>
    </style>

    <style name="personal_item_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/personal_item_img_mar_r</item>
    </style>

    <style name="weight_1_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="person_arro_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/personal_arro</item>
    </style>

    <style name="my_book_item_img_style">
        <item name="android:layout_width">145dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/book_item_img_shape</item>
    </style>

    <style name="common_list_title_item_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_white_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/white_shape</item>
    </style>

    <style name="common_item_pad_15_width" parent="common_white_item">

        <item name="android:padding">15dp</item>
    </style>

    <style name="common_marg_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_top_marg</item>
    </style>

    <style name="common_marg_white_item" parent="common_marg_item">
        <item name="android:background">@drawable/white_shape</item>
    </style>

    <style name="cmmon_pad_white_item" parent="common_white_item">
        <item name="android:padding">10dp</item>
    </style>

    <style name="comnon_pad_3_white_item" parent="common_white_item">
        <item name="android:padding">5dp</item>
    </style>

    <style name="edit_white_style" parent="cmmon_pad_white_item">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_15_tv_stlye" parent="font_black_15">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="about_us_tv_style" parent="black_15_tv_stlye">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="addr_manager_item" parent="font_black_15">
        <item name="android:drawableRight">@drawable/addr_edit</item>
        <item name="android:background">@null</item>
        <item name="android:padding">14dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="deal_picker_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="star_stlye">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="mid_item_img_size">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="number_line_style">
        <item name="android:background">@color/gray2</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="book_content_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="book_tb_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="book_tr_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="input_edit_style" parent="font_gray2_15">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_height">@dimen/book_input_height</item>
        <item name="android:paddingLeft">@dimen/book_draw_pad_left</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@drawable/input_bg_sel</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="book_input_num_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="green_btn_style" parent="font_white_18">
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/green_bg_sel</item>
    </style>

    <style name="book_submit_btn_style" parent="green_btn_style">
        <item name="android:text">@string/submit_book</item>
    </style>


    <style name="book_detail_tr_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/book_detail_between_line</item>
    </style>

    <style name="book_detail_all_colume" parent="font_gray2_14">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_item_base_tv_style" parent="font_gray_12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="home_item_price_tv_style" parent="home_item_base_tv_style">
        <item name="android:text">@string/home_today</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="home_item_price_yuan_tv_style" parent="home_item_base_tv_style">
        <item name="android:text">@string/yuan</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="home_item_price_green_tv_style" parent="font_greent_14">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="menu_item_img_size">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
    </style>

</resources>
