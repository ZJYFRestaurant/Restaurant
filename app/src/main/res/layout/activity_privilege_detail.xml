<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_gray"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/common_marg_white_item"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/privilege_detail_img"
                android:src="@drawable/img_loading"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/home_item_pad"
                android:scaleType="centerCrop"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_margin="@dimen/common_top_marg"
                android:orientation="horizontal"
                android:padding="@dimen/common_pad"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/privilege_title_name_tv"
                    style="@style/font_gray2_17"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/privilege_time_tv"
                    android:layout_width="wrap_content"
                    style="@style/font_gray2_15"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/privilege_detail_tv"
                style="@style/font_gray2_15"
                android:layout_margin="@dimen/common_pad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
