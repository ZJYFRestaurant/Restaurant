<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    style="@style/cmmon_pad_white_item">

    <ImageView
        style="@style/mid_item_img_size"
        android:id="@+id/privilege_item_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/privilege_item_name_tvs"
            style="@style/font_black_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/privilege_item_des_tv"
            style="@style/font_black_12"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>