<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.promo.zjyfrestaurant.personal.MyOrderActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/myorder_no_msg_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <ImageView
            style="@style/no_msg_img_style"
            android:scaleType="centerCrop"
            android:src="@drawable/no_order_img" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myorder_lv"
        android:listSelector="@android:color/transparent"
        android:paddingRight="@dimen/common_pad"
        android:paddingBottom="@dimen/common_pad"
        android:paddingLeft="@dimen/common_pad"></ListView>

</RelativeLayout>
