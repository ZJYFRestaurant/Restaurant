<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mydialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:text="New Text"
        style="@style/font_gray2_17" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_green" />

    <TextView
        android:id="@+id/mydialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:lineSpacingMultiplier="1.2"
        style="@style/font_gray2_15" />

    <View style="@style/gray_divide_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_sel"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            style="@style/font_black_18"
            android:textStyle="bold" />


        <View
            android:id="@+id/btn_divider2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_gray" />

        <TextView
            android:id="@+id/button_negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_sel"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            style="@style/font_black_18"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>